#!/usr/bin/env bash

for od in *
do
	if [ -d $od ] ; then
		cd $od > /dev/null
		if [ -d .git ] ; then
			echo "==> $od/$id"
			git $1 $2 $3 $4 $5 $6 $7 $8 $9
		else
			for id in *
			do
				if [ -d $id ] ; then
					cd $id > /dev/null
					if [ -d .git ] ; then
						echo "==> $od/$id"
						git $1 $2 $3 $4 $5 $6 $7 $8 $9
					fi
					cd .. > /dev/null
				fi
			done
			cd .. > /dev/null
		fi
	fi
done

