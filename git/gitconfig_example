[user]
	name = Conor Mooney
	email = cmooney@groupon.com
[core]
	editor = vi
	excludesfile = /Users/cmooney/.gitignore_global
[alias]
    bl = blame
    br = branch
    ci = commit
    cl = clone
    co = checkout
    dc = difftool --cached
    df = diff
    dt = difftool
    ft = fetch
    gf = log --pretty=format:'%h : [%cN - %cr] %s <%d>' --graph --name-status
    gr = log --pretty=format:'%h : [%cN - %cr] %s <%d>' --graph
    lf = log --name-status
    lg = log
    pl = pull
    ps = push
    rl = rev-list --all
    st = status
    sw = show
    url = config --get remote.origin.url
[merge]
	tool = mvimdiff
[color]
	ui = true
[diff]
	tool = default-difftool
[difftool "default-difftool"]
    cmd = mvim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE
[difftool]
	prompt = false
[remote "origin"]
    push = refs/heads/*:refs/heads/*
    push = refs/tags/*:refs/tags/*
